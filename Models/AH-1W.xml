<!-- Gun Turret Animations -->

<animation>
<type>spin</type>
<object-name>minigun</object-name>
<property>/sim/time/elapsed-sec</property>
<factor>5.55555</factor>
<condition>
<property>controls/armament/trigger</property>
</condition>
<center>
<x-m>0</x-m>
<y-m>2.79</y-m>
<z-m>-1.55</z-m>
</center>
<axis>
<x>0</x>
<y>1</y>
<z>0</z>
</axis>
</animation>

<animation>
<type>rotate</type>
<object-name>minigun</object-name>
<property>sim/model/turret-positions/turretz</property>
<factor>1</factor>
<axis>
<x>1</x>
<y>0</y>
<z>0</z>
</axis>
<center>
<x-m>0</x-m>
<y-m>2.79</y-m>
<z-m>-1.55</z-m>
</center>
</animation>


<animation>
<type>rotate</type>
<object-name>minigun</object-name>
<object-name>turret</object-name>
<property>sim/model/turret-positions/turretx</property>
<factor>1</factor>
<axis>
<x>0</x>
<y>0</y>
<z>1</z>
</axis>
<center>
<x-m>0</x-m>
<y-m>2.79</y-m>
<z-m>-1.55</z-m>
</center>
</animation> 


<!-- Canopy Animations -->

<animation>
<type>pick</type>
<object-name>copilotdoor1</object-name>
<object-name>copilotdoor2</object-name>
<object-name>copilotdoor3</object-name>
<visible>true</visible>
<action>
<button>0</button>
<repeatable>false</repeatable>
<binding>
<command>nasal</command>
<script>ah1.GunnerDoor.toggle();</script>
</binding>
</action>
</animation>

<animation>
<type>rotate</type>
<object-name>copilotdoor1</object-name>
<object-name>copilotdoor2</object-name>
<object-name>copilotdoor3</object-name>
<property>sim/multiplay/generic/float[0]</property>
<factor>70</factor>
<center>
<x-m>-0.22</x-m>
<y-m>2.65</y-m>
<z-m>0.08</z-m>
</center>
<axis>
<x>0</x>
<y>1</y>
<z>-0.2</z>
</axis>
</animation>

<animation>
<type>pick</type>
<object-name>pilotdoor1</object-name>
<object-name>pilotdoor2</object-name>
<object-name>pilotdoor3</object-name>
<visible>true</visible>
<action>
<button>0</button>
<repeatable>false</repeatable>
<binding>
<command>nasal</command>
<script>ah1.PilotDoor.toggle();</script>
</binding>
</action>
</animation>

<animation>
<type>rotate</type>
<object-name>pilotdoor1</object-name>
<object-name>pilotdoor2</object-name>
<object-name>pilotdoor3</object-name>
<property>sim/multiplay/generic/float[1]</property>
<factor>-70</factor>
<center>
<x-m>0.22</x-m>
<y-m>1.75</y-m>
<z-m>0.19</z-m>
</center>
<axis>
<x>0</x>
<y>1</y>
<z>-0.1</z>
</axis>
</animation>

<!-- Livery Type Animations -->

<animation>
<type>select</type>
<object-name>lau_l</object-name>
<object-name>lau_r</object-name>
<object-name>hellfires_l</object-name>
<object-name>hellfires_r</object-name>
<condition>
<property>sim/model/ah1/missiles</property>
</condition>
</animation>

<animation>
<type>select</type>
<object-name>minigun</object-name>
<condition>
<property>sim/model/ah1/gun</property>
</condition>
</animation>

