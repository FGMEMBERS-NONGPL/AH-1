<?xml version="1.0"?>

	<PropertyList>

	<path>pilot.ac</path>

	<animation>
		<type>select</type>
		<object-name>pilot2</object-name>
		<condition>
			<not>
				<equals>
					<property>sim/current-view/name</property>
					<value>Cockpit View</value>
				</equals>
			</not>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>pilot1</object-name>
		<condition>
			<not>
				<equals>
					<property>sim/current-view/name</property>
					<value>Gunner/Co-Pilot View</value>
				</equals>
			</not>
		</condition>
	</animation>

</PropertyList>
